<%
const cfg = { ...require("./data.json"), ...arguments?.[0] }
const {
	extraClasses,
	extraAttrs,
	type,
	label,
	name
} = cfg
%>

<%
const classes = `form-input ${extraClasses.join(" ")}`.trim()
const attrs = extraAttrs.join(" ")
%>

<input
	class="<%= classes %>"
	<%- extraAttrs %>
	name="<%= name %>"
	placeholder=""
	required=""
	type="<%= type %>"
>
<label class="form-label"><%= label %></label>

